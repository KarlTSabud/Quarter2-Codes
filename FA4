num_students = int(input("Enter number of students: "))
num_subjects = int(input("Enter number of subjects: "))

total_class_score = 0

for s in range(1, num_students + 1):
    print(f"\nStudent {s}")
    total_student = 0
    
    for sub in range(1, num_subjects + 1):
        score = float(input(f"Enter score {sub}: "))
        total_student += score
    
    avg_student = total_student / num_subjects
    print(f"Average for Student {s} = {avg_student:.1f}")
    
    total_class_score += total_student

class_avg = total_class_score / (num_students * num_subjects)
print(f"\nClass Average = {class_avg:.1f}")
